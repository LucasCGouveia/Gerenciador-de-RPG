@{
    Layout = "~/Views/_Layouts/_Dasme.cshtml";
}

<header class="major">
    <h2>Nova Classe</h2>
</header>

<form action="~/Classes/Create" method="post">
    <div class="form-row">
        <div class="form-group col-md-4">
            <p align="center">Classe</p>
            <input type="text" class="form-control" name="CLASSE" />
        </div>
        <div class="form-group col-md-4">
            <p align="center">Descrição</p>
            <input type="text" class="form-control" name="DESCRICAO" />
        </div>
        <div class="form-group col-md-4">
            <p align="center">Ativo</p>
            <input type="checkbox" class="form-check-input" name="ATIVO" value="1" id="flexSwitchCheckDefault">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <input type="submit" class="form-control" value="Editar" />
        </div>
    </div>
</form>
