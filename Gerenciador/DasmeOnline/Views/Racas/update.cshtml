@{
    Layout = "~/Views/_Layouts/_Dasme.cshtml";
}

<header class="major">
    <h2>Editar Raça</h2>
</header>

<form action="~/Racas/update" method="post">
    <!-- CAMPOS OCULTOS -->
    <input type="text" class="form-control" name="COD" value="@ViewBag.TabRacas.COD" style="display:none"/>
    <div class="form-row">
        <div class="form-group col-md-4">
            <p align="center">Raça</p>
            <input type="text" class="form-control" name="RACA" value="@ViewBag.TabRacas.RACA" />
        </div>
        <div class="form-group col-md-4">
            <p align="center">Descrição</p>
            <input type="text" class="form-control" name="DESCRICAO" value="@ViewBag.TabRacas.DESCRICAO" />
        </div>
        <div class="form-group col-md-4">
            <p align="center">Ativo</p>
            <input type="checkbox" class="form-check-input" name="ATIVO" value="" id="flexSwitchCheckDefault">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <input type="submit" class="form-control" value="Editar" />
        </div>
    </div>
</form>


