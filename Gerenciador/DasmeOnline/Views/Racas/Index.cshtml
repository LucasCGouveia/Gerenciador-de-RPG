@{
    Layout = "~/Views/_Layouts/_Dasme.cshtml";
}

<header class="major">
    <h2>Bem Vindo @ViewBag.LOGIN</h2>
</header>
<div class="row">
    <div class="col-md-8">
        <h4>Raças criadas:</h4>
    </div>
    <div class="col-md-4" align="right">
        <a href="~/Racas/Create">
            <input type="button" id="txtCreateRaca" value="Nova Raça" />
        </a>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <table border="3">
            <tr>
                <td>Nome</td>
                <td>Descrição</td>
                <td>Ativo</td>
                <td>Editar</td>
                <td>Excluir</td>
            </tr>
            @foreach (var item in ViewBag.TabRacas)
            {
                <tr>
                    <td>@item.RACA</td>
                    <td>@item.DESCRICAO</td>
                    <td>
                        @if (item.ATIVO == 1)
                        {
                            <input type="checkbox" class="form-check-input" name="ATIVO" value="" id="flexSwitchCheckDefault">
                        }
                        else
                        {
                            <input type="checkbox" class="form-check-input" name="ATIVO" value="" id="flexSwitchCheckDefault">
                        }
                    </td>
                    <td><a class="btn btn-info" href="~/Racas/Update/@item.COD"><span class="fa fa-edit"></span></a></td>
                    <td><a class="btn btn-danger" href="~/Racas/Delete/@item.COD"><span class="fa fa-book"></span></a></td>
                </tr>
            }
        </table>
    </div>
</div>
