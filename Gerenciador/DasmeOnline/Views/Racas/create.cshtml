@{
    Layout = "~/Views/_Layouts/_Dasme.cshtml";
}

<header class="major">
    <h2>Adicionar nova Raça</h2>
</header>

<form action="~/Racas/create" method="post">
    <div class="form-row">
        <div class="form-group col-md-4">
            <p align="center">Raça</p>
            <input type="text" class="form-control" name="RACA" />
        </div>
        <div class="form-group col-md-4">
            <p align="center">Descrição</p>
            <input type="text" class="form-control" name="DESCRICAO" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <input type="submit" class="form-control" value="Cadastrar" />
        </div>
    </div>
</form>
