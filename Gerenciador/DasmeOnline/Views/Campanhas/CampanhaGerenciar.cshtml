@{
    Layout = "~/Views/_Layouts/_Dasme.cshtml";
}

<header class="major">
    <h2>Gerenciar Campanha: @ViewBag.TabCampanhas.NOMECAMPANHA</h2>
</header>

<div class="form-row">
    <div class="form-group col-md-10">
        <h2>Personagens</h2>
    </div>
    <div class="form-group col-md-2">
        <a href="/Personagens/PersonagemBuscar/@ViewBag.TabCampanhas.COD">
            <input type="button" class="btn-primary" name="BtnAdicionar" value="Adicionar" />
        </a>
    </div>
</div>
<table>
    <tr>
        <td>Nome</td>
        <td>Raça</td>
        <td>Classe</td>
        <td>C.A</td>
        <td>PV Total</td>
        <td>PV Atual</td>
        <td>P Ataque</td>
        <td>Iniciativa</td>
        <td>Jades</td>
        <td>XP</td>
        <td>Nivel</td>
        <td>Editar</td>
        <td>Remover</td>
    </tr>
    @foreach (var item in ViewBag.listaTabPersonagens)
    {
<tr>
    <td>@item.NOME</td>
    <td>@item.RACA</td>
    <td>@item.CLASSE</td>
    <td>@item.CA</td>
    <td>@item.PVTOTAL</td>
    <td>@item.PVATUAL</td>
    <td>@item.PATAQUE</td>
    <td>@item.INICIATIVA</td>
    <td>@item.DINHEIRO</td>
    <td>@item.EXPERIENCIA</td>
    <td>@item.NIVEL</td>
    <td><a class="btn btn-info" href="~/Personagens/PersonagemEditar/@item.COD"><span class="fa fa-edit"></span></a></td>
    <td><a class="btn btn-danger" href="~/Personagens/PersonagemRemover/@item.COD"><span class="fa fa-book"></span></a></td>
</tr>
    }
</table>
