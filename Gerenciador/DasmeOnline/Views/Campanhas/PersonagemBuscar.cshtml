@{
    Layout = "~/Views/_Layouts/_Dasme.cshtml";
}
<header class="major">
    <h2>Buscar Personagem para Adicionar na Campanha</h2>
</header>

<form action="/Mestres/PersonagemBuscar" method="post">
    <!--   -->
    <input type="text" name="COD_CAMPANHA" value="@ViewBag.COD_CAMPANHA" style="display:none"/>

    <div class="form-row">
        <div class="form-group col-md-2">
            <h2>BUSCAR</h2>
        </div>
        <div class="form-group col-md-8">
            <input type="text" class="form-control" name="NOME"/>  
        </div>
        <div class="form-group col-md-2">
            <input type="submit" value="Buscar"/>
        </div>
    </div>
</form>

<table>
    <tr>
        <td>Personagem</td>
        <td>Raça</td>
        <td>Classe</td>
        <td>Alinhamento</td>
        <td>Adicionar</td>
    </tr>
    
    @foreach (var item in ViewBag.listaTabPersonagens)
    { 
<tr>
    <td>@item.NOME</td>
    <td>@item.RACA</td>
    <td>@item.CLASSE</td>
    <td>@item.ALINHAMENTO</td>
    <td><a class="btn btn-primary" href="~/Mestres/PersonagemAdicionar/@item.COD"><span class="fa fa-book"></span></a></td>
</tr>
    }
</table>


